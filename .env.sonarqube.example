# SonarQube Configuration
# Copy to .env.sonarqube and fill in your values

# Local SonarQube Server (Option 1)
SONAR_HOST_URL=http://localhost:9000
SONAR_TOKEN=your_local_token_here

# SonarQube Cloud (Option 2)
# SONAR_HOST_URL=https://sonarcloud.io
# SONAR_TOKEN=your_sonarcloud_token_here
# SONAR_ORGANIZATION=your-organization-key

# Coverage Thresholds
COVERAGE_THRESHOLD_STATEMENTS=80
COVERAGE_THRESHOLD_BRANCHES=75
COVERAGE_THRESHOLD_FUNCTIONS=80
COVERAGE_THRESHOLD_LINES=80

# Analysis Settings
SONAR_VERBOSE=false
SONAR_SOURCES=src,app,routes
SONAR_TESTS=tests
SONAR_EXCLUSIONS=**/*.d.ts,**/node_modules/**,**/dist/**
